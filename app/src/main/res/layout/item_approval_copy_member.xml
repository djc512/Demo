<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/group_mem_w_h"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_copy_icon"
            android:layout_width="@dimen/group_mem_icon_w_h"
            android:layout_height="@dimen/group_mem_icon_w_h"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/iv_head"/>

        <TextView
            android:id="@+id/tv_copy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="测试"/>

    </LinearLayout>
</LinearLayout>
