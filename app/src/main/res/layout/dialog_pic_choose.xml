<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical">

    <Button
        android:id="@+id/gallery_pup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_forty_nine"
        android:background="@drawable/photo_gallery_selector"
        android:text="图库"
        android:textSize="16sp"
        android:textColor="@color/black2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/gray6" />

    <Button
        android:id="@+id/photograph_pup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_forty_nine"
        android:background="@drawable/photo_camera_selector"
        android:text="拍照"
        android:textSize="16sp"
        android:textColor="@color/black2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@color/gray5" />
    <Button
        android:id="@+id/cancel_pup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_forty_nine"
        android:background="@drawable/photo_cancel_selector"
        android:text="取消"
        android:textSize="16sp"
        android:textColor="@color/black2"/>

</LinearLayout>