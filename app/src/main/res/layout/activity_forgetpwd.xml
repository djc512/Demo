<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="15dp"
        android:background="#1aa919"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_forget_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_2x"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"/>
        </LinearLayout>
        <TextView
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_2x"/>
        <EditText
            android:id="@+id/et_forget_phone"
            style="?android:attr/textViewStyle"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textColor="#999999"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="手机号"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#e5e5e5"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pwd_2x"/>
        <EditText
            android:id="@+id/et_forget_VeryCode"
            style="?android:attr/textViewStyle"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textColor="#999999"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="验证码"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_forget_VeryCode"
            android:textColor="#1aad19"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#e5e5e5"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/btn_forget_next"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn_login"
        android:layout_marginTop="45dp"
        android:text="下一步"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>