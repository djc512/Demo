<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_recycler_click_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_create_phone_layout_h"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/group_create_phone_icon_w_h"
            android:layout_height="@dimen/group_create_phone_icon_w_h"
            android:layout_marginLeft="@dimen/group_create_phone_icon_margin"
            android:src="@drawable/iv_head"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/group_create_phone_icon_margin"
            android:maxLines="1"
            android:text="选择已有群组"/>
    </LinearLayout>
</LinearLayout>
