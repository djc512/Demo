<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_account_cz"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_cz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/broder_line_yellow"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        >

        <TextView
            android:id="@+id/tv_account_chong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="充￥199元"
            android:textSize="18sp"
            android:textColor="@color/black2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_account_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_account_chong"
            android:layout_centerVertical="true"
            android:text="送￥199元"
            android:textColor="@color/black2"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_account_song"
            android:layout_toLeftOf="@+id/ll_price"
            android:layout_centerVertical="true"
            android:text="相当于"
            android:gravity="center"
            android:textColor="@color/gray8"
            android:textSize="11sp"
            />
        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_account_selected"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="visible">
            <TextView
                android:id="@+id/tv_blackprice"
                android:layout_width="93dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:background="@color/black2"
                android:text="黑白:￥0.1/页"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_colorprice"
                android:layout_width="93dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:background="@color/yellow3"
                android:layout_marginTop="@dimen/distance_five"
                android:text="彩色:￥1.0/页"
                android:gravity="center"
                android:textColor="@color/black2"
                android:textSize="12sp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>