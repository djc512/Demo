<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical" >
    <RelativeLayout
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/text_color"
            android:layout_centerInParent="true"
            android:text="应用"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="文件制作"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:padding="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray5" />
    <LinearLayout
        android:id="@+id/ll_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_apply_copy"
            android:id="@+id/imageView5"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="扫描复印"
            android:textSize="18sp"
            android:textColor="@color/text_color"/>

        <ImageView
            android:id="@+id/iv_dayin"
            style="@style/arrow_go" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="办公应用"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:padding="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray5" />

    <RelativeLayout
        android:id="@+id/ll_approve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/iv_apply_approve"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_approve"
            android:layout_marginLeft="15dp"
            android:text="审批"
            android:textSize="18sp"
            android:textColor="@color/text_color"/>
        <TextView
            android:id="@+id/tv_approve_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_circle"
            android:layout_toRightOf="@+id/tv_approve"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/iv_mingxi"
            style="@style/arrow_go"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>



</LinearLayout>