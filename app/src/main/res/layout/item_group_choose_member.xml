<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_recycler_click_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_create_member_layout_h"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/contactCheck"
            android:layout_marginLeft="@dimen/group_create_member_cb_margin"
            android:layout_width="@dimen/group_create_member_cb_w_h"
            android:layout_height="@dimen/group_create_member_cb_w_h"
            android:enabled="false"
            android:button="@null"
            android:background="@drawable/member_check_selector"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contactIcon"
            android:layout_marginLeft="@dimen/group_create_icon_margin"
            android:layout_marginRight="@dimen/group_create_icon_margin"
            android:layout_width="@dimen/group_create_icon_w_h"
            android:layout_height="@dimen/group_create_icon_w_h"
            android:src="@drawable/iv_head"/>
        <TextView
            android:id="@+id/contactName"
            android:text="wanghao"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
