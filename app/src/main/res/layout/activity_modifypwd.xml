<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="15dp"
        android:background="#1aa919"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_modify_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_2x"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"/>
        <TextView
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="设置新密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pwd_2x" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_modify_pwd"
            style="?android:attr/textViewStyle"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textColor="#999999"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="新密码"/>
        <ImageView
            android:id="@+id/iv_modify_look"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/colse_2x"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#e5e5e5"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pwd_2x"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_modify_pwd1"
            style="?android:attr/textViewStyle"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textColor="#999999"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="确认新密码"/>
        <ImageView
            android:id="@+id/iv_modify_look1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/colse_2x"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#e5e5e5"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/btn_modify_ok"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/btn_login"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="确认"/>
</LinearLayout>