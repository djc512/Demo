<?xml version="1.0" encoding="utf-8"?>
<huanxing_print.com.cn.printhome.view.RectangleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rectangleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp">

    <ImageView
        android:id="@+id/photoImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/fileRyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/file_blue"
        android:padding="10dp">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="middle"
            android:maxLines="1"
            android:text="TextVieTextViewTextViViewTextViewTeTeViewTextViewTeTeViewTextViewTeTeViewTextViewTeTeViewTextViewTeTeewTeTextViewTextViewTextViewxtVieww.doc"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/typeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="DOC"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>

</huanxing_print.com.cn.printhome.view.RectangleLayout>