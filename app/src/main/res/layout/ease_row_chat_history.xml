<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list_itease_layout"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/ease_default_avatar"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/unread_msg_number"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/shape_dot_red"
        android:gravity="center"
        android:layout_marginLeft="-10dp"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:layout_alignTop="@+id/avatar_container"
        android:layout_toRightOf="@+id/avatar_container"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/avatar_container"
        android:text="印群"
        android:textColor="@color/list_itease_primary_color"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="2017 5 22 10:20"
        android:textColor="@color/list_itease_secondary_color"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/msg_state"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/avatar_container"
        android:src="@drawable/ease_msg_state_fail_resend"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/mentioned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/msg_state"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:text="@string/were_mentioned"
        android:textColor="#e84e40"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@id/time"
        android:layout_toRightOf="@id/mentioned"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="消息详情"
        android:textColor="@color/list_itease_secondary_color"
        android:textSize="14sp"/>

</RelativeLayout>