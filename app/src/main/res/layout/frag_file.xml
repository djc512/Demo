<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <RelativeLayout
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_copy_bg">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_copy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <RadioButton
                    android:button="@null"
                    android:checked="true"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拍照采集"
                    android:background="@drawable/yellow_selector_left"
                    android:id="@+id/btn_camera" />

                <RadioButton
                    android:id="@+id/btn_pic"
                    android:button="@null"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/yellow_selector_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本地相册" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/rl_copy"
                android:orientation="vertical"
                android:background="@drawable/shape_copyiv_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/copycamera"
                        />
                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 拍照采集/本地相册"/>
                </LinearLayout>
                <View
                    android:layout_marginLeft="65dp"
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/clip"
                        />
                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 自动裁剪 一键调整"/>
                </LinearLayout>
                <View
                    android:layout_marginLeft="65dp"
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/print"
                        />
                    <TextView
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 联机打印"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    </ScrollView>
</LinearLayout>