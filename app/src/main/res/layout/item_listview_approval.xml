<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg_color"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:padding="10dip" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/tv_printer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刘代会-采购审批"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="审批中"
                        android:textColor="@color/blue"
                        android:textSize="18sp" />
                </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_apporva_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="2017/5/4"
                        android:textSize="14sp"
                        android:textColor="@color/gray2"
                        />

            </LinearLayout>




        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_approva_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="用途说明:普天办公用品普天办公用品"
            android:ellipsize="start"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:padding="10dp"

            />
        <TextView
            android:id="@+id/tv_apporva_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:ellipsize="start"
            android:text="采购清单:打印机两台"
            android:textSize="18sp"
            android:textColor="@color/text_color"

            />

    </LinearLayout>

</LinearLayout>