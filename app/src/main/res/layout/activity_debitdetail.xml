<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout style="@style/Re_title">

        <include layout="@layout/ll_title_back"></include>

        <TextView
            style="@style/title"
            android:text="发票记录详情" />
    </RelativeLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="vertical">
        <TextView
            android:paddingBottom="7dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通发票"/>
        <TextView
            android:paddingTop="7dp"
            android:paddingBottom="15dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="韵达快递"/>
    </LinearLayout>
    <include layout="@layout/view1"/>
    <LinearLayout
        android:padding="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_debitrecord_time"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开票时间:"/>
        <TextView
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_debitrecord_money"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票金额:"/>
        <TextView
            android:id="@+id/tv_debitrecord_num"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易号:"/>
    </LinearLayout>
    <include layout="@layout/view1"/>
    <TextView
        android:padding="15dp"
        android:background="@color/white"
        android:textColor="#000000"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发票抬头："/>
    <include layout="@layout/viewline"/>
    <TextView
        android:padding="15dp"
        android:background="@color/all_bg_color"
        android:textColor="#999999"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发票信息"/>
    <include layout="@layout/viewline"/>

    <TextView
        android:textSize="17sp"
        android:padding="15dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="收件人："/>
    <include layout="@layout/viewline"/>

    <TextView
        android:textSize="17sp"
        android:padding="15dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="联系方式："/>
    <include layout="@layout/viewline"/>

    <TextView
        android:textSize="17sp"
        android:padding="15dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="所在地区："/>
    <include layout="@layout/viewline"/>

    <TextView
        android:textSize="17sp"
        android:padding="15dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="详细地区："/>
    <include layout="@layout/viewline"/>
</LinearLayout>